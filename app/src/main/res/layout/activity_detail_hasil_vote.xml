<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_home.VoteActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/detailsVoteBack"
        android:elevation="1dp"
        android:background="@drawable/myrect"
        android:src="@drawable/back"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp">
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="match_parent"
            android:id="@+id/imgHasilVt"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/basket"
            app:siShape="@drawable/shape_raunded_rectangle"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/IvDetailInfo"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="-12sp"
        app:cardCornerRadius="30dp"
        android:outlineSpotShadowColor="@color/black">
    <LinearLayout
        android:id="@+id/AlreadyVote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtVwHasilVt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/txtJdlHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:text="HASIL VOTE : "/>
        <TextView
            android:id="@+id/total1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text=" "/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartHasilVote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/NoAlreadyVote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textSize="25dp"
            android:text="Anda Belum Melakukan Vote. Tolong Vote Terlebih Dahulu."/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>