<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="?attr/line_dark"
        app:cardCornerRadius="30dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            app:cardBackgroundColor="?attr/background_light"
            app:cardCornerRadius="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/LlShowAll"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jdlShowAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="PEMILIHAN KETUA SMF"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:textColor="?attr/text_dark"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/arialbd">

                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">
                    <ImageView
                        android:id="@+id/imageShowAll"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/menuShowAll"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/shareShowAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="?attr/icon_dark"
                        android:src="@mipmap/ic_share"/>
                    <ImageView
                        android:id="@+id/editShowAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:tint="?attr/icon_dark"
                        android:src="@mipmap/ic_editv2"/>
                    <ImageView
                        android:id="@+id/hapusShowAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:tint="?attr/icon_dark"
                        android:src="@mipmap/ic_deletev2"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>