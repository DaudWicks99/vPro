<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/background_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cancelEditPass"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:tint="?attr/icon_light"
        android:src="@drawable/ic_delete"/>
    <EditText
        android:id="@+id/editPassOld"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:textColor="?attr/text_light" />
    <EditText
        android:id="@+id/editPassNew"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textColor="?attr/text_light" />
    <EditText
        android:id="@+id/editPassNew2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:textColor="?attr/text_light" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnEditPass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        app:fb_borderColor="?attr/line_light"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="?attr/button_dark"
        app:fb_focusColor="?attr/button_dark"
        app:fb_radius="30dp"
        app:fb_text="SUBMIT"
        app:fb_textColor="?attr/text_light" />

</LinearLayout>