<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/background_dark"
    tools:context=".SuccessActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Your password is change!"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/arialbd"
        android:layout_marginTop="30dp"
        android:textColor="?attr/text_light"/>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_back_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        app:fb_borderColor="?attr/line_light"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="?attr/button_dark"
        app:fb_focusColor="?attr/button_dark"
        app:fb_radius="30dp"
        app:fb_text="Back to login"
        app:fb_textColor="?attr/text_light" />

</LinearLayout>